from matplotlib import pyplot as plt
from random import random
from random import randint


liste=[]
liste2=[]  
def init_aleatoire(size):   
    for k in range(size):
        liste=[]
        for i in range(size):
            liste.append(randint(0,3))
        liste2.append(liste) 

    for i in range(size):
        print(liste2[i])
    return(liste2)
size=int(input("taille du monde "))



init_aleatoire(size)

grille=liste2

def coordonnees(grille):
    x=int(input("quel x voulez-vous ? : "))
    y=int(input("quel y voulez-vous ? : "))
    return(grille[x][y])
    return(x,y)

print(coordonnees(grille))

#Fonction affichage:
nb_type_bonbons = 4
def affichage_grille(grille, nb_type_bonbons):
    plt.imshow(grille, vmin=0, vmax=nb_type_bonbons-1, cmap="jet")
    plt.pause(0.1)
    plt.draw()
    plt.pause(0.1)
affichage_grille(grille, nb_type_bonbons)


#fonction coordonnees bonbon
def coordonnees(grille):
    b1=[]
    b2=[]
    x=int(input("quel x pour le premier bonbon voulez-vous ? : "))
    y=int(input("quel y pour le premier bonbon voulez-vous ? : "))
    x2=int(input("quel x pour le deuxième bonbon voulez-vous ? : "))
    y2=int(input("quel y pour le deuxième bonbon voulez-vous ? : "))
    b1.append(x)
    b1.append(y)
    b2.append(x2)
    b2.append(y2)
    return(b1,b2)
    
    
    
    
    #fonction changement bonbon
    
def changement(grille):
    b1=[]
    x=coordonnees(grille)
    c=0
    b1=grille[x[0][0]][x[0][1]]
    b2=grille[x[1][0]][x[1][1]]
    c=b1
    b1=b2
    b2=c
    return(b1,b2)
print(changement(grille))    

